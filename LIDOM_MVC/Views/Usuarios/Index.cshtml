@{
    Layout = null;
}
@model LIDOM_MVC.Models.Usuario
<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Inicio de Sesión</title>
    <!-- Agrega el enlace al archivo CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header" style="background-color: #007bff; color: #fff; text-align: center; font-weight: bold;">Login</div>
                <div class="card-body">
                    <form asp-action="AuthUser">
                        <div class="form-group">
                            <label asp-for="UsuNombre" style="font-weight: bold;">Username</label>
                            <input name="us" type="text" class="form-control" style="border: 2px solid #007bff; border-radius: 5px; padding: 10px; width: 100%;" placeholder="Enter your username">
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuPassword" style="font-weight: bold;">Password</label>
                            <input name="pass" type="password" class="form-control" style="border: 2px solid #007bff; border-radius: 5px; padding: 10px; width: 100%;" placeholder="Enter your password">
                        </div>
                        <button type="submit" class="btn btn-primary" style="background-color: #007bff; color: #fff; width: 100%;">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- Agrega el script de Bootstrap (jQuery es necesario) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>
</body>
</html>