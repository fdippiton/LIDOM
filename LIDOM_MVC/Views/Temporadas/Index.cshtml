@model IEnumerable<LIDOM_MVC.Models.Temporada>

@{
    ViewData["Title"] = "Index";
}

<h1>Temporadas</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary " asp-action="Create">Crear nueva temporada</a>
        
    }
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.TemId)
                </th>               
            }
            <th>
                @Html.DisplayNameFor(model => model.TemNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemFecInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemFecFinal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.TemId)
                    </td>                    
                }
                <td>
                    @Html.DisplayFor(modelItem => item.TemNombre)
                </td>
                <td>
                    @item.TemFecInicio.ToLongDateString()
                   @*  @Html.DisplayFor(modelItem => item.TemFecInicio) *@
                </td>
                <td>
                    @item.TemFecFinal.ToLongDateString()
@*                     @Html.DisplayFor(modelItem => item.TemFecFinal)
 *@                </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="d-flex flex-nowrap">
                            @Html.ActionLink("Editar", "Edit", new { id=item.TemId }, new { @class = "btn btn-outline-secondary me-1" }) 
                            @Html.ActionLink("Detalles", "Details", new { id=item.TemId }, new { @class = "btn btn-outline-primary me-1" }) 
                            @Html.ActionLink("Eliminar", "Delete", new { id=item.TemId }, new { @class = "btn btn-outline-danger me-1" })
                        </td>
                    }  
            </tr>
        }
    </tbody>
</table>
