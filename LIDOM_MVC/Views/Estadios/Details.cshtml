            @Html.DisplayFor(model => model.EstId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstNombre)
        </dd>
        <dt class = "col-sm-2">
